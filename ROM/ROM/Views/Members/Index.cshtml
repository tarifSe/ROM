@model IEnumerable<ROM.Models.Member>
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Members Information</h1>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Code)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.Phone)</th>
            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => member.Code)
            </td>
            <td>
                @Html.DisplayFor(m => member.Name)
            </td>
            <td>
                @Html.DisplayFor(m => member.Email)
            </td>
            <td>
                @Html.DisplayFor(m => member.Phone)
            </td>
            <td>
                @Html.DisplayFor(m => member.Category.Name)
            </td>
        </tr>
        }
    </tbody>
</table>

