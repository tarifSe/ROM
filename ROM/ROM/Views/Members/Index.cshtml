@model IEnumerable<ROM.Models.Member>
@{
    ViewData["Title"] = "Index";
}

<h2 class="alert alert-info">Members Information</h2>
<hr />

<div class="form-group row">
    <div class="col-sm-6">
        <a asp-action="Add" class="btn btn-outline-primary">Add New Member</a>
    </div>
    <div class="col-sm-6">
        @if (TempData["saveMsg"] != null)
        {
            <div class="text-success text-right" id="divRemove">
                <h5><strong>Success! </strong> @TempData["saveMsg"]</h5>
            </div>
        }
    </div>
</div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>SL/No</th>
            <th>@Html.DisplayNameFor(m => m.Code)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.Phone)</th>
            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
            <th></th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ var sl = 1;}
        @foreach (var member in Model)
        {
        <tr>
            <td>@(sl++)</td>
            <td>
                @Html.DisplayFor(m => member.Code)
            </td>
            <td>
                @Html.DisplayFor(m => member.Name)
            </td>
            <td>
                @Html.DisplayFor(m => member.Email)
            </td>
            <td>
                @Html.DisplayFor(m => member.Phone)
            </td>
            <td>
                @Html.DisplayFor(m => member.Category.Name)
            </td>
            <td>
                <partial name="_ButtonPartial" model="@member.Id">
            </td>
        </tr>
        }
    </tbody>
</table>



