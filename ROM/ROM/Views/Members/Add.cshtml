@model ROM.Models.Member
@{
    ViewData["Title"] = "Add";
}

@*@if (ViewBag.SuccessMsg != null)
{
    <h4>@ViewBag.SuccessMsg</h4>
}*@
@if (ViewBag.ValidationMsg != null)
{
    <h4 class="text-danger">@ViewBag.ValidationMsg</h4>
}

<h1 class="text-success">Add new member here.</h1>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select class="form-control" asp-for="CategoryId">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name | Id-@category.Id</option>
                    }
                </select>
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-success form-control" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to list</a>
</div>


