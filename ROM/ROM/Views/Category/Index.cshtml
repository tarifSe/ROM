@model IEnumerable<ROM.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h2 class="alert alert-info">Category Information</h2>
<hr />

<div class="form-group row">
    <div class="col-sm-6">
        <a asp-action="Save" class="btn btn-outline-primary"><i class="fa-regular fa-plus"></i>&nbsp; Add New Category</a>
    </div>
    <div class="col-sm-6">
        @if (TempData["saveMsg"] != null)
        {
            <div class="text-success text-right" id="divRemove">
                <h5><strong>Success! </strong> @TempData["saveMsg"]</h5>
            </div>
        }
    </div>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>SL/No</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th></th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ var sl = 1;}
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @(sl++)
            </td>
            <td>
                @Html.DisplayFor(c => category.Name)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>*@
                <partial name="_ButtonPartial" model="@category.Id">
            </td>
        </tr>
        }
    </tbody>
</table>