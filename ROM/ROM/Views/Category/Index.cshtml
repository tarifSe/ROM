@model IEnumerable<ROM.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Category Information</h1>

@*<p class="text-info"><b>Work in progress...</b></p>*@

<p><a asp-action="Save">Add New Category</a></p>

<table class="table table-dark">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => category.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-danger">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>