@model IEnumerable<ROM.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h2 class="alert alert-info">Category Information</h2>
<hr />

@*<p class="text-info"><b>Work in progress...</b></p>*@

<p><a asp-action="Save" class="btn btn-outline-primary">Add New Category</a></p>

<table class="table table-dark">
    <thead>
        <tr>
            <th>SL/No</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ var sl = 1;}
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @(sl++)
            </td>
            <td>
                @Html.DisplayFor(c => category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>