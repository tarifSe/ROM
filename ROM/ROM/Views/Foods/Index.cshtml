@model IEnumerable<ROM.Models.Food>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="alert alert-info">Food Information</h2>

<div class="form-group row">
    <div class="col-sm-6">
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </div>
    <div class="col-sm-6">
        @if (TempData["saveMsg"] != null)
        {
            <div class="text-success text-right" id="divRemove">
                <h5><strong>Success! </strong> @TempData["saveMsg"]</h5>
            </div>
        }
    </div>
</div>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>SL#</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ var sl = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@(sl++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
