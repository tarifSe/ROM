@model ROM.Models.OrderDetails
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Report Viewer</h1>
<hr />

<div class="row">
    <div class="col-sm-5">
        <form asp-action="Save">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Member Code</label>
                <div class="col-sm-8">
                    <select asp-for="MemberId" id="member" class="form-control">
                        @foreach (var item in Model.Members)
                        {
                            <option value="@item.Id">@item.Code</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input id="name" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input id="email" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Contact No</label>
                <div class="col-sm-8">
                    <input id="contact" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Type</label>
                <div class="col-sm-8">
                    <input id="memberType" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DateTime" class="col-sm-4 col-form-label">Select Date</label>
                <div class="col-sm-8">
                    <input asp-for="DateTime" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4"></label>
                <div class="col-sm-8  text-right">
                    <input type="submit" value="Show" class="btn btn-primary" />
                </div>
            </div>
            <br />
            @*<div class="form-group row">
                <label class="col-sm-4 col-form-label">Total Amount</label>
                <div class="col-sm-8">
                    <input id="" name="" value="" class="form-control" readonly="readonly" />
                </div>
            </div>*@
        </form>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-6">
        <h3>Ordered items</h3>
        

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Item Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Kachchi Biriany</td>
                    <td>2</td>
                    <td>320</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Big Pizza</td>
                    <td>1</td>
                    <td>840</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Dinner Pack</td>
                    <td>3</td>
                    <td>1800</td>
                </tr>
            </tbody>
        </table>
        <div class="text-right">
            <h2>Total Amount: 2960</h2>
        </div>
    </div>
</div>

