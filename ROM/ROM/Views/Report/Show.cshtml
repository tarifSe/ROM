@model ROM.Models.OrderDetails
@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="alert alert-dark">View Order Details Report</h2>
<hr />

<div class="row">
    <div class="col-sm-5">
        <div class="form-group row">
                <label class="col-sm-4 col-form-label">Member Code</label>
                <div class="col-sm-8">
                    <select asp-for="MemberId" id="member" class="form-control">
                        @foreach (var item in Model.Members)
                        {
                            <option value="@item.Id">@item.Code</option>
                        }
                    </select>
                </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <input id="name" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Email</label>
            <div class="col-sm-8">
                <input id="email" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Contact No</label>
            <div class="col-sm-8">
                <input id="contact" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Type</label>
            <div class="col-sm-8">
                <input id="memberType" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DateTime" class="col-sm-4 col-form-label">Select Date</label>
            <div class="col-sm-8">
                <input asp-for="DateTime" id="date" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4"></label>
            <div class="col-sm-8  text-right">
                <input type="submit" id="btnClick" value="Show" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-6">
        <h3>Ordered items</h3>
        
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Sl/No</th>
                    <th>@Html.DisplayNameFor(c => c.Food.Name)</th>
                    <th>@Html.DisplayNameFor(c => c.Food.UnitPrice)</th>
                    <th>@Html.DisplayNameFor(c => c.Quantity)</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody id="tBody">

            </tbody>
        </table>
        <div class="text-right">
            <h2 id="price" class=""></h2>
        </div>
    </div>
</div>

