@model ROM.Models.OrderDetails
@{
    ViewData["Title"] = "Save";
}

@if (ViewBag.SuccessMsg != null)
{
    <h4 class="text-success">@ViewBag.SuccessMsg</h4>
}
@if (ViewBag.ErrorMsg != null)
{
    <h4 class="text-danger">@ViewBag.ErrorMsg</h4>
}

<h1>Order for food</h1>
<hr />

<form asp-action="Save">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Member Code</label>
        <div class="col-sm-5">
            <select asp-for="MemberId" id="member" class="form-control">
                @foreach (var item in Model.Members)
                {
                    <option value="@item.Id">@item.Code</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-5">
            <input id="name" class="form-control" readonly="readonly" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-5">
            <input id="email" class="form-control" readonly="readonly" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-5">
            <input id="email" class="form-control" readonly="readonly" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Contact No</label>
        <div class="col-sm-5">
            <input id="contact" class="form-control" readonly="readonly" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-5">
            <input id="type" class="form-control" readonly="readonly" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="FoodId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <select asp-for="FoodId" id="Food" class="form-control">
                @foreach (var food in Model.Foods)
                {
                    <option value="@food.Id">@food.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-5">
            <input id="type" class="form-control" readonly="readonly" />
        </div>
    </div>
</form>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            
          
            @*<div class="form-group">
                <label asp-for="FoodId" class="control-label"></label>
                <select asp-for="FoodId" class="form-control">
                    @foreach (var food in Model.Foods)
                    {
