@model ROM.Models.OrderDetails
@{
    ViewData["Title"] = "Save";
}



<h2 class="alert alert-primary">Order For Food</h2>
<hr />

@if (TempData["saveMsg"] != null)
{
    <div class="text-success text-right" id="divRemove">
        <h5><strong>Success! </strong> @TempData["saveMsg"]</h5>
    </div>
}
@if (TempData["errorMsg"] != null)
{
    <div class="text-white text-right" id="divRemove">
        <h5><strong>Faild! </strong> @TempData["errorMsg"]</h5>
    </div>
}

<div class="alert bg-info text-white">



    <form asp-action="Save">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Member Code</label>
            <div class="col-sm-5">
                <select asp-for="MemberId" id="member" class="form-control">
                    @foreach (var item in Model.Members)
                    {
                        <option value="@item.Id">@item.Code</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-5">
                <input id="name" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-5">
                <input id="email" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Contact No</label>
            <div class="col-sm-5">
                <input id="contact" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Type</label>
            <div class="col-sm-5">
                <input id="memberType" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FoodId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <select asp-for="FoodId" id="food" class="form-control">
                    @foreach (var food in Model.Foods)
                    {
                        <option value="@food.Id">@food.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Unit Price</label>
            <div class="col-sm-5">
                <input id="price" class="form-control" readonly="readonly" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-warning"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DateTime" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input asp-for="DateTime" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2"></label>
            <div class="col-sm-5">
                <input type="submit" value="Save" class="btn btn-success form-control" />
            </div>
        </div>
    </form>

</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

