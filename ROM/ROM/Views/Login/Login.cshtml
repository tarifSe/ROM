@model ROM.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="vh-100" style="background: linear-gradient(to left, #0099ff 0%, #6600cc 58%); ">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark shadow-2-strong" style="border-radius: 1rem;">
                    <form asp-action="Login">
                        <div class="card-body p-5 text-center">

                            <h2 class="fw-bold text-white mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>

                            <div class="form-outline mb-4">
                                <input asp-for="UserName" id="typeEmailX-2" class="form-control form-control-lg" placeholder="username" />
                            </div>

                            <div class="form-outline mb-4">
                                <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="Password" />
                            </div>

                            @* Checkbox*@
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" disabled />
                                <label class="form-check-label text-light" for="form1Example3"> Remember password </label>
                            </div>

                            <button class="btn btn-outline-primary btn-lg btn-block" type="submit">Login</button>
                            <br />
                            <div class="d-flex justify-content-start mb-4">
                                @if (ViewBag.message != null)
                                {
                                    <p class="text-danger">@ViewBag.message</p>
                                }
                            </div>
                        </div>
                    </form>

                    
                    <div>
                        <p class="text-white text-center">This is a simple login!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

